{
  "name": "standardoc-cli",
  "version": "1.1.1",
  "description": "CLI tool for extracting and injecting documentation from code comments using @tags",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "standardoc": "./dist/cli/cli.js"
  },
  "scripts": {
    "build": "tsc && node scripts/add-extensions.js",
    "watch": "tsc --watch",
    "test": "bun test",
    "dev": "bun run build && node dist/cli/cli.js"
  },
  "keywords": [
    "documentation",
    "comments",
    "parser",
    "tags",
    "docs",
    "cli",
    "markdown",
    "mdx",
    "code-documentation"
  ],
  "author": "Standardoc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SUP2Ak/standardoc-cli.git"
  },
  "files": [
    "dist",
    "README.md",
    "USAGE.md",
    "CONTRIBUTING.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "fast-glob": "^3.3.3"
  }
}

